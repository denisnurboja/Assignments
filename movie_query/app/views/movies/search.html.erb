<nav class="navbar navbar">
	<div class="container">
		<div class="navbar-header">
			<h2><%= link_to "Muuvee | ", root_path, class: "text-muted" %><small>Dead. Simple. Movies.</small></h2>
		</div>
		<%= form_tag(search_path, method: 'get', class: "navbar-form navbar-right") do %>
		<div class="form-group">
			<%= text_field_tag(:title, nil, class: "form-control", placeholder: "Enter Movie Title") %>
			<%= submit_tag "Submit", :name => nil, class: "btn btn-default" %>
		</div>
		<% end %>
	</div>
</nav>
<div class="container">
	<div class="jumbotron">
		<h1><%= @title %>  <small>[ <%= @rating %> ]</small></h1>
		<h3><small><span class="glyphicon glyphicon-film" aria-hidden="true"></span></i> Theater Debut: <%= @theater %> | <span class="glyphicon glyphicon-cd" aria-hidden="true"></span> DVD Released: <%= @dvd %></small></h3><br />
		<p class="lead"><%= truncate(@synopsis, length: 200, separator: ' ') %></p>
		<% if @synopsis.empty? %>
		<p class="lead">No synopsis available at this time.</p>
		<% end %>
	</div>
	<div class="row marketing">
		<div class="col-lg-6">
			<p><%= image_tag @poster, class: "img-responsive" %></p>
			<% if @poster.empty? %>
			<p><%= image_tag url('/assets/angrypanda.png'), class: "img-responsive" %></p>
			<% end %>
		</div>
		<div class="col-lg-6">
			<h3>Year</h3>
			<p><%= @year %></p>
			<h3>Runtime</h3>
			<p><%= @runtime %> mins.</p>
			<h3>Critics Rating <small>(<%= @critics_r %>)</small></h3>
			<p class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= @critics %>%"><%= @critics %>%</p><br /><br />
			<h3>Audience Rating <small>(<%= @audience_r %>)</small></h3>
			<p class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= @audience %>%"><%= @audience %>%</p><br /><br />
			<h3>Synopsis</h3>
			<p><%= @synopsis %></p>
			<% if @synopsis.empty? %>
			<p>No synopsis available at this time.</p>
			<% end %>
			<h3>Cast</h3>
			<ul class="list-unstyled">
				<% @cast.each do |cast| %>
				<li><i class="fa fa-star"></i> <strong><%= cast["name"] %></strong> as <em><%= cast["characters"].join(" ") %></em></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<div class="panel-footer"><div class="container">Developed by <%= link_to 'Tony Gaeta', 'http://www.tonygaeta.com/' %> while attending <%= link_to 'The Iron Yard', 'http://www.theironyard.com/' %> academy in beautiful Downtown St. Pete.</div>
</div>